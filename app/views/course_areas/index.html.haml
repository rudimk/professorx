- model_class = CourseAreas
.page-header
  %h1= t '.title', :default => CourseAreas
%table.table.table-striped
  %thead
    %tr
      %th ID
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @course_areas.each do |course_areas|
      %tr
        %td= course_areas.id
        %td= course_areas.name
        %td= l course_areas.created_at, format: :long
        %td
          = link_to course_areas_path(course_areas), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do
            = glyph 'info-sign'
            = glyph 'pencil'
          = link_to course_areas_path(course_areas), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do
            = glyph 'remove'
= link_to t('.new', :default => t("helpers.links.new")), |
  new_course_areas_path,                                 |
  :class => 'btn btn-primary'                            |