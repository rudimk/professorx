- model_class = CourseAreas
.page-header
  %h1= t '.title', :default => CourseAreas
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:name)
    %dd
      %pre.prettyprint= @course_areas.name
.form-group
  = link_to t('.back', :default => t("helpers.links.back")), |
    course_areas_path, :class => 'btn btn-default'           |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")),           |
    edit_course_areas_path(@course_areas), :class => 'btn btn-default' |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    course_areas_path(@course_areas),                                                                            |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |