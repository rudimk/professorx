- model_class = Course
.page-header
  %h1= t '.title', :default => Course
.fieldset
  %dl
    %dt.label.label-default= model_class.human_attribute_name(:title)
    %dd
      %pre.prettyprint= @course.title
    %dt.label.label-default= model_class.human_attribute_name(:author)
    %dd
      %pre.prettyprint= @course.author
    %dt.label.label-default= model_class.human_attribute_name(:cost)
    %dd
      %pre.prettyprint= @course.cost
.form-group
  = link_to t('.back', :default => t("helpers.links.back")), |
    courses_path, :class => 'btn btn-default'                |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_course_path(@course), :class => 'btn btn-default'   |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    course_path(@course),                                                                                        |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |